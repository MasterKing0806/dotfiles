ssh_backup() {
read -p "Ist Server an? (y f√ºr ja, sonst nichts) " unks
if [ "$unks" == "y" ];then
    echo "SSH (Musik-)Dateien auf Seagate-HDD" 

    #Musik
    rsync -rhuvtP --stats caca@192.168.90.41:/home/caca/music/ /run/media/ca/7FEF-CE8E/Musik   

    #Navidrome
    rsync -rhuvtP --stats --exclude="data/cache/" caca@192.168.90.41:/home/caca/navidrome/ "/games/canh/Linux-Pakte/Config Files/Docker/navidrome"
    rsync -rhuvtP --stats --exclude="data/cache/" caca@192.168.90.41:/home/caca/navidrome/ "/run/media/ca/7FEF-CE8E/Linux-Pakte/Config Files/Docker/navidrome"

    #Pihole
    rsync -rhuvtP --stats --include={'compose.yaml','etc-pihole/','etc-pihole/pihole-FTL.db*'} --exclude='*' caca@192.168.90.41:/home/caca/pihole/ "/games/canh/Linux-Pakte/Config Files/Docker/pihole"
    rsync -rhuvtP --stats --include={'compose.yaml','etc-pihole/','etc-pihole/pihole-FTL.db*'} --exclude='*' caca@192.168.90.41:/home/caca/pihole/ "/run/media/ca/7FEF-CE8E/Linux-Pakte/Config Files/Docker/pihole"
fi
}
