ssh_backup() {
read -p "Ist Server an? (y f√ºr ja, sonst nichts) " unks
if [ "$unks" == "y" ];then
    echo "SSH (Musik-)Dateien auf Seagate-HDD" 

    #Musik
    rsync -rhuvtP --stats laptopserver:/home/caca/music/ /run/media/ca/7FEF-CE8E/Musik   

    #Navidrome
    rsync -rhuvtP --stats --exclude="data/cache/" laptopserver:/home/caca/navidrome/ "/games/canh/Linux-Pakte/Config Files/Docker/navidrome"
    rsync -rhuvtP --stats --exclude="data/cache/" laptopserver:/home/caca/navidrome/ "/run/media/ca/7FEF-CE8E/Linux-Pakte/Config Files/Docker/navidrome"

    #Nextcloud
    #Compose file
    rsync -rhuvtP --stats --include={'compose.yaml'} --exclude='*' laptopserver:/home/caca/nextcloud/ "/games/canh/Linux-Pakte/Config Files/Docker/nextcloud"
    rsync -rhuvtP --stats --include={'compose.yaml'} --exclude='*' laptopserver:/home/caca/nextcloud/ "/run/media/ca/7FEF-CE8E/Linux-Pakte/Config Files/Docker/nextcloud"

    #Daten
    rsync -rhuvtP --stats laptopserver:/home/caca/nextcloud/nc/data /run/media/ca/7FEF-CE8E/nextcloud  

    #Pihole
    rsync -rhuvtP --stats --include={'compose.yaml','etc-pihole/','etc-pihole/pihole-FTL.db*'} --exclude='*' laptopserver:/home/caca/pihole/ "/games/canh/Linux-Pakte/Config Files/Docker/pihole"
    rsync -rhuvtP --stats --include={'compose.yaml','etc-pihole/','etc-pihole/pihole-FTL.db*'} --exclude='*' laptopserver:/home/caca/pihole/ "/run/media/ca/7FEF-CE8E/Linux-Pakte/Config Files/Docker/pihole"
fi
}
